@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="w3-content w3-container w3-padding-64">
    <h3 class="w3-center">
        FORGOT YOUR PASSWORD?
    </h3>
    <div class="w3-row">
        <div class="w3-col m6 w3-center w3-hide w3-padding-large">
            <img src="~/images/golden.jpg" class="w3-round w3-image" alt="Photo of Me" width="500" height="333">
        </div>
        <div class="w3-col m6 w3-padding-large">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <h4></h4>
                    <label asp-for="Email" class="formlabel">Enter your email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button  class="w3-button w3-right w3-section" style="background-color: #ed8c72">
                        SUBMIT
                    </button>
                </div>
            </form>
            @section Scripts {
                @await Html.PartialAsync("_ValidationScriptsPartial")
            }
        </div>
    </div>
</div>
