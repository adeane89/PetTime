@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Log in";
}
<div class="w3-content w3-padding-64">
    <h2 class="w3-center">
        LOG IN
    </h2>
    <div class="w3-row-padding">
        <div class=" w3-col m4"><p></p></div>
        <div class="w3-col m4">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="formlabel"></label>
                    <input asp-for="Email" class="w3-input w3-border" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="formlabel"></label>
                    <input asp-for="Password" class="w3-input w3-border" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="formlabel">
                            <input asp-for="RememberMe" type="checkbox" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <a asp-action="ForgotPassword" class="formlabel" style="color: #ed8c72;">Forgot your password</a>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="formlabel" style="color: #ed8c72;">Register as a new user</a>
                </div>
                <div class="form-group">
                    <button class="w3-button w3-right w3-section" style="background-color: #ed8c72">
                        LOG IN
                    </button>
                </div>
            </form>
            @section Scripts {
                @await Html.PartialAsync("_ValidationScriptsPartial")
            }
        </div>
        <div class=" w3-col m4"><p></p></div>
    </div>
</div>