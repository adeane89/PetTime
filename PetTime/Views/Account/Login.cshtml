@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Log in";
}
<div class="w3-content w3-container w3-padding-64">
    <h3 class="w3-center">
        LOG IN
    </h3>
    <div class="w3-row">
        <div class="w3-col m6 w3-center w3-padding-large">
            <img src="~/images/golden.jpg" class="w3-round w3-image" alt="Photo of Me" width="500" height="333">
        </div>
        <div class="w3-col m6 w3-padding-large">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="formlabel"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="formlabel"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                        <a asp-action="ForgotPassword" class="formlabel">Forgot your password?</a>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="formlabel">Register as a new user?</a>
 
                </div>
                <div class="form-group">
                    <button class="w3-button w3-black w3-right w3-section">
                        LOG IN
                    </button>
                </div>
            </form>
            @section Scripts {
                @await Html.PartialAsync("_ValidationScriptsPartial")
            }
        </div>
    </div>
</div>