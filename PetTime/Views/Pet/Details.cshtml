@model Pet

@{ 
    ViewData["Title"]="Details"; 
} 

<h2>@Model.Name></h2>
<img class="img-fluid"src="/@Model.ImagePath" />
<form method="post">
    <input type="hidden" name="id" value="@Model.ID" />
    <select name="breed">
        <option value="Golden Retriever">Golden Retriever</option>
        <option value="GoldenDoodle">GoldenDoodle</option>
        <option value="English Springer Spaniel">English Springer Spaniel</option>
        <option value="Corgi">Corgi</option>
        <option value="Labrador Retriever">Labrador Retriever</option>
    </select>
    <select name="quantity">
        <option value="1">1</option>
        <option value="1">2</option>
        <option value="1">3</option>
        <option value="1">4</option>
        <option value="1">5</option>
    </select>
    <select name="time length">
        <option value="Fifteen minutes">Fifteen minutes</option>
        <option value="Thirty minutes">Thirty minutes</option>
        <option value="Sixty minutes">Sixty minutes</option>
        <option value="Ninety minutes">Ninety minutes</option>
    </select>
    <select name="time">
        <option value="9:00 AM">9:00 AM</option>
        <option value="9:30 AM">9:30 AM</option>
        <option value="10:00 AM">10:00 AM</option>
        <option value="10:30 AM">10:30 AM</option>
        <option value="11:00 AM">11:00 AM</option>
        <option value="11:30 AM">11:30 AM</option>
        <option value="12:00 PM">12:00 PM</option>
        <option value="12:30 PM">12:30 PM</option>
        <option value="1:00 PM">1:00 PM</option>
        <option value="1:30 PM">1:30 PM</option>
        <option value="2:00 PM">2:00 PM</option>
        <option value="2:30 PM">2:30 PM</option>
        <option value="3:00 PM">3:00 PM</option>
        <option value="3:30 PM">3:30 PM</option>
        <option value="4:00 PM">4:00 PM</option>
        <option value="4:30 PM">4:30 PM</option>
    </select>
    <select name="date">
        <option value="Monday">Monday</option>
        <option value="Tuesday">Tuesday</option>
        <option value="Wednesday">Wednesday</option>
        <option value="Thursday">Thursday</option>
        <option value="Friday">Friday</option>
        <option value="Saturday">Saturday</option>
    </select>
    <button class="btn btn-secondary">Add to Cart</button>
</form>