@model Pet

@{
    ViewData["Title"] = "Details";
}

<div class="w3-col m6 w3-center w3-padding-large">
    <h2>@Model.Name</h2>
    <img src="@Model.ImagePath" class="w3-round w3-image w3-opacity w3-hover-opacity-off" width="300" height="200" />
    <form method="post">
        <input type="hidden" name="id" value="@Model.ID" />
        <label for="">How many animals?</label>
        <select name="animalCount">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>
        <label for="">How long would you like your event</label>
        <select name="length">
            <option value="Fifteen minutes">Fifteen minutes</option>
            <option value="Thirty minutes">Thirty minutes</option>
            <option value="Sixty minutes">Sixty minutes</option>
            <option value="Ninety minutes">Ninety minutes</option>
        </select>
        <label for="event-time">Date/time:</label>
        <input type="datetime-local" name="startDate" value="2018-08-20T14:30"
               min=@DateTime.Now max=@DateTime.Now.AddYears(1) />
        <button class="btn btn-secondary">Schedule Visit</button>
    </form>
</div>
