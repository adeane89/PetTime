@model Pet

@{
    ViewData["Title"] = "Details";
}
<div class="w3-content w3-container w3-padding-64" id="about">
    <h2 class="w3-center">
        SCHEDULE A VISIT
    </h2>
    <p class="w3-center"><em>Schedule an individual visit to come snuggle with a puppy for awhile! Take a midday break or come after work and enjoy the love and affection our puppies have to offer</em></p>
    <div class="w3-center w3-hide-small">
        <a asp-controller="Pet" asp-action="Index" class="w3-bar-item w3-button" style="border: solid;">Schedule Visit</a>
        <a asp-controller="Pet" asp-action="Corporate" class="w3-bar-item w3-button" style="border: solid;">Schedule Event</a>
        <a asp-controller="Pet" asp-action="Therapy" class="w3-bar-item w3-button" style="border: solid;">Therapy Dogs</a>
    </div>
    <div class="w3-row">
        <div class="w3-col m6 w3-center w3-padding-large">
            <h3 style="color: #ed8c72">@Model.Name</h3>
            <img src="@Model.ImagePath" class="w3-round w3-image" width="300" height="200" />
        </div>
        <div>
            <p></p>
        </div>
        <!-- Hide this text on small devices -->
        <div class="w3-col m6 w3-padding-large">
            <form method="post">
                <input type="hidden" name="id" value="@Model.ID" />
                <div class="form-group">
                    <label class="formlabel">How many puppies would you like to visit?</label>
                    <select name="animalCount" required class="w3-input w3-border">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="formlabel" for="formGroupExampleInput3">How long would you like your visit to be?</label>
                    <select name="length" required class="w3-input w3-border">
                        <option value="Fifteen minutes">15 minutes</option>
                        <option value="Thirty minutes">30 minutes</option>
                        <option value="Forty-five minutes">45 minutes</option>
                        <option value="Sixty minutes">60 minutes</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="formlabel " for="event-time">Date/time of event:</label>
                    <input type="datetime-local" asp-for="StartDate" value="2018-08-24T19:30"
                           min="2018-08-24T00:00" max="2019-06-14T00:00" required class="w3-input w3-border" />
                    <h6><em>* Visits are between 9 AM and 6 PM</em></h6>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="IsRecurring" value="false" class="form-check-input" id="exampleRadios1" checked>
                    <label class="formlabel" for="exampleRadios1">
                        One Time
                    </label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="IsRecurring" value="true" class="form-check-input" id="exampleRadios2">
                    <label class="formlabel" for="exampleRadios2">
                        Recurring
                    </label>
                </div>
                <div>
                    <button class="w3-button w3-right w3-section" style="background-color: #ed8c72" type="submit">
                        <i class="far fa-calendar-alt"></i> SCHEDULE VISIT
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


