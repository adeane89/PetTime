@model IEnumerable<Pet>
@{
    ViewData["Title"] = "Services";
}

<!-- Container (About Section) -->
<div class="w3-content w3-container w3-padding-64" id="about">
    <h3 class="w3-center">SCHEDULE VISIT</h3>
    <p class="w3-center"><em>Schedule a time and come in to meet our fabulous puppies!</em></p>
    <div class="w3-center w3-hide-small">
        <a asp-controller="Pet" asp-action="Index" class="w3-bar-item w3-button" style="border: solid;">Schedule Visit</a>
        <a asp-controller="Pet" asp-action="Corporate" class="w3-bar-item w3-button" style="border: solid;">Schedule Event</a>
        <a asp-controller="Pet" asp-action="Therapy" class="w3-bar-item w3-button" style="border: solid;">Therapy Dogs</a>
    </div>

    <form class="breedform">
        <div class="w3-row-padding" style="margin:0 -16px 8px -16px">
            <div class="w3-half">
                <label for="category"></label>
                <select name="category" class="form-control">
                    @if (string.IsNullOrEmpty(ViewBag.selectedCategory))
                    {
                        <option value="" selected>All Breeds</option>
                    }
                    else
                    {
                        <option value="">All Breeds</option>
                    }
                    @foreach (string category in (string[])ViewData["Categories"])
                    {
                        @if (ViewBag.selectedCategory == category)
                        {
                            <option value="@category" selected>@category</option>
                        }
                        else
                        {
                            <option value="@category">@category</option>
                        }
                    }
                </select>
            </div>
            <label>&nbsp;</label>
            <button class="w3-button w3-black w3-right w3-section" type="submit">
                SORT
            </button>
        </div>
    </form>

    <div class="card-deck">
        @foreach (var pet in Model)
        {
            <div class="card container" style="text-align: center" width="300" height="200">
                <p><b>@pet.Description</b></p>
                <div class="card-img-top"><img src="@pet.ImagePath" class="w3-round w3-image w3-opacity w3-hover-opacity-off" alt="@pet.Name" width="300" height="200"></div>
                <div class="card-body">
                    <p style="text-align: center">
                        <a asp-controller="Pet" asp-action="Details" asp-route-id="@pet.ID"  class="w3-bar-item w3-button" style="border: solid">View Details</a>
                    </p>
                </div>
            </div>
        }
    </div>
</div>
    
