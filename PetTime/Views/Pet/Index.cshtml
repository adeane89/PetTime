@model IEnumerable<Pet>

<a asp-controller="Pet" asp-action="Corporate" class="btn btn-primary">View Corporate Deals!</a>
<a asp-controller="Therapy" asp-action="Index" class="btn btn-primary">View Therapy Animal Information!</a>
<form>
    <h2>Sort Animals</h2>
    <label for="category">Category:</label>
    <select name="category" class="form-control">
        @if (string.IsNullOrEmpty(ViewBag.selectedCategory))
        {
            <option value="" selected>All Animals</option>
        }
        else
        {
            <option value="">All Animals</option>
        }

        @if (ViewBag.selectedCategory == "dogs")
        {
            <option value="dogs" selected>Dogs</option>
        }
        else
        {
            <option value="dogs">Dogs</option>
        }

        @if (ViewBag.selectedCategory == "cats")
        {
            <option value="cats" selected>Cats</option>
        }
        else
        {
            <option value="cats">Cats</option>
        }
    </select>
    <label for="sort">Sort By</label>
    <select name="sort" class="form-control">
        <option value="name">Name</option>
    </select>
    <button class="btn btn-secondary">Filter</button>
</form>

@foreach (var pet in Model)
{
    <div class="img">
        <h1>@pet.Name</h1>
        <p>@pet.Description</p>
        <img src="@pet.ImagePath" alt="@pet.Name" />
        <p>@(pet.Price.HasValue ? pet.Price.Value.ToString("c") : "No Price")</p>
        <a asp-controller="Pet" asp-action="Details" asp-route-id="@pet.ID" class="btn btn-primary">View Details</a>
    </div>
}


