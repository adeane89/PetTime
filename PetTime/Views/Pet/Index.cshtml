@model IEnumerable<Pet>
@{
    ViewData["Title"] = "Services";
}

<!-- Container (About Section) -->
<div class="w3-content w3-padding-64" id="services">
    <h2 class="w3-center">SCHEDULE A VISIT</h2>
    <p class="w3-center"><em>Schedule a time to come in to meet our fabulous puppies!</em></p>
    <div class="w3-center w3-hide-small">
        <a asp-controller="Pet" asp-action="Index" class="w3-bar-item w3-button" style="border: solid;">Schedule Visit</a>
        <a asp-controller="Pet" asp-action="Corporate" class="w3-bar-item w3-button" style="border: solid;">Schedule Event</a>
        <a asp-controller="Pet" asp-action="Therapy" class="w3-bar-item w3-button" style="border: solid;">Therapy Dogs</a>
    </div>

    <form class="breedform">
        <div class="w3-row-padding">
            <div class="w3-row w3-center">
                <p></p>
            </div>
            <div class=" w3-col m4">
                <p class="w3-right" style="line-height: 37px;">Find a breed:</p>
            </div>
            <div class=" w3-col m4">
                <select name="category" class="w3-input w3-border">
                    @if (string.IsNullOrEmpty(ViewBag.selectedCategory))
                    {
                        <option value="" selected>All Breeds</option>
                    }
                    else
                    {
                        <option value="">All Breeds</option>
                    }
                    @foreach (string category in (string[])ViewData["Categories"])
                    {
                        @if (ViewBag.selectedCategory == category)
                        {
                            <option value="@category" selected>@category</option>
                        }
                        else
                        {
                            <option value="@category">@category</option>
                        }
                    }
                </select>
            </div>
            <div class=" w3-col m4">
                <label>&nbsp;</label>
                <button class="w3-button w3-left" style="background-color: #ed8c72" type="submit">
                    GO
                </button>
            </div>
        </div>
    </form>

</div>

<a href="#services" class="w3-button w3-section w3-right w3-hide-small" style="background-color: #ed8c72; position: fixed; bottom: 0px;"><i class="fa fa-arrow-up w3-margin-right"></i>To the top</a>
<a href="#services" class="w3-button w3-section w3-right w3-hide-large" style="background-color: #ed8c72; position: fixed; bottom: 0px;"><i class="fa fa-arrow-up w3-margin-right"></i></a>
<div class="w3-padding-large">
    <div class="card-deck">
        @foreach (var pet in Model)
        {
            <div class="card-body" style="text-align: center;">
                <a asp-controller="Pet" asp-action="Details" asp-route-id="@pet.ID">
                    <img src="@pet.ImagePath" class="w3-round w3-image w3-opacity w3-hover-opacity-off" width="300" height="200">
                </a>
                <div class="card-text">
                    <h5 class="">@pet.Description</h5>
                    <a asp-controller="Pet" asp-action="Details" asp-route-id="@pet.ID" class="w3-bar-item w3-button" style="border: solid">Pick Me!</a>
                </div>

            </div>
        }
    </div>
</div>

