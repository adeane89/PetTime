@model CorporateCart

@{
    ViewData["Title"] = "Plan Events";
}

<div class="w3-content w3-container w3-padding-64" id="about">
    <h3 class="w3-center">
        Host an event!
    </h3>
    <p class="w3-center"><em>Bring our animals to your space!</em></p>
    <p>
    </p>
    <div class="w3-row">
        <p><b>Puppy Yoga</b></p><br>
    </div>

    <div class="w3-row">
        <div class="w3-col m6 w3-center w3-padding-large">
            <img src="~/images/puppy2.jpg" class="w3-round w3-image w3-opacity w3-hover-opacity-off" alt="Photo of Me" width="500" height="333">
        </div>

        <!-- Hide this text on small devices -->
        <div class="w3-col m6 w3-hide-small w3-padding-large">
            <form method="post">
                <input asp-for="ID" type="hidden" />
                <div class="form-group">
                    <label type="text" placeholder="Message" required name="Message">
                        What kind of event is this for?
                    </label>

                    <label class="W3- w3-border">What kind of event is this for?</label>
                    <select asp-for="EventType" required class="form-control">
                        <option value="Corporate">Corporate</option>
                        <option value="School">School</option>
                        <option value="Party">Party</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">How many animals would you like to join?</label>

                    <select asp-for="AnimalCount">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                </div>
                <label for="formGroupExampleInput3">How long would you like your event to be?</label>
                <select asp-for="Length">
                    <option value="One hour">One hour</option>
                    <option value="Two hours">Two hours</option>
                    <option value="Three hours">Three hours</option>
                </select>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="IsRecurring" value="false">
                    <label class="form-check-label" for="inlineCheckbox1">One time</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="IsRecurring" value="true">
                    <label class="form-check-label" for="inlineCheckbox2">Recurring</label>
                </div>
                <div>
                    <label for="event-time">Date/time:</label>
                    <input type="datetime-local" asp-for="StartDate" value="2018-07-27T19:30"
                           min="2018-07-27T00:00" max="2019-06-14T00:00" />
                </div>
                <div>
                    <button class="w3-button w3-black w3-right w3-section" type="submit">
                        <i class="fa fa-paper-plane"></i> SCHEDULE EVENT
                    </button>
                </div>
            </form>
            <div class="col-4">
                <p>
                    <a asp-controller="Pet" asp-action="Index" class="btn btn-primary">Schedule a visit!</a>
                </p>
                <p>
                    <a asp-controller="Pet" asp-action="Corporate" class="btn btn-primary">Corporate Deals!</a>
                </p>
                <p>
                    <a asp-controller="Pet" asp-action="Therapy" class="btn btn-primary">Therapy Animal Information!</a>
                </p>
            </div>
        </div>
    </div>
    </div>