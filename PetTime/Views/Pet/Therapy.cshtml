@model TherapyCart

@{
    ViewData["Title"] = "Therapy";
}
<div class="w3-content w3-container w3-padding-64" id="about">
    <h3 class="w3-center">
        Therapy Dogs
    </h3>
    <p class="w3-center"><em>Therapy dogs are trained with a handler to provide comfort and support to many people in either an individual or group setting.</em></p>
    <div class="w3-center w3-hide-small">
        <a asp-controller="Pet" asp-action="Index" class="w3-bar-item w3-button" style="border: solid;">Schedule Visit</a>
        <a asp-controller="Pet" asp-action="Corporate" class="w3-bar-item w3-button" style="border: solid;">Schedule Event</a>
        <a asp-controller="Pet" asp-action="Therapy" class="w3-bar-item w3-button" style="border: solid;">Therapy Dogs</a>
    </div>

<div class="w3-row">
    <div class="w3-col m6 w3-center w3-padding-large">
        <img src="~/images/therapy.jpg" class="w3-round w3-image" alt="Photo of Me" width="500" height="333">
    </div>

    <!-- Hide this text on small devices -->
    <div class="w3-col m6 w3-padding-large">
        <form method="post">
            <input asp-for="ID" type="hidden" />
            <div class="form-group">
                <label type="text" class="formlabel" placeholder="Message" required name="Message">
                    What kind of event is this for?
                </label>
                <select asp-for="EventType" required class="form-control">
                    <option value="Corporate">Corporate</option>
                    <option value="School">School</option>
                    <option value="Party">Party</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <label class="formlabel">How many animals would you like to join?</label>
                <select asp-for="AnimalCount" required class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>
            <div class="form-group">
                <label class="formlabel" for="formGroupExampleInput3">How long would you like your event to be?</label>
                <select asp-for="Length" required class="form-control">
                    <option value="One hour">One hour</option>
                    <option value="Two hours">Two hours</option>
                    <option value="Three hours">Three hours</option>
                </select>
            </div>
            <div class="form-group">
                <label class="formlabel " for="event-time">Date/time:</label>
                <input type="datetime-local" asp-for="StartDate" value="2018-07-27T19:30"
                       min="2018-07-27T00:00" max="2019-06-14T00:00" required class="form-control" />
            </div>
            <div class="form-group">
                <input type="radio" asp-for="IsRecurring" value="false">
                <label for="inlineCheckbox1">One time</label>
                <input type="radio" asp-for="IsRecurring" value="true">
                <label for="inlineCheckbox2">Recurring</label>
            </div>
            <div class="form-group">
                <label class="formlabel" for="formGroupExampleInput">Are there any specific instructions we should follow? (If there are none, type "none")</label>
                <input type="text" class="form-control" id="formGroupExampleInput" asp-for="Instructions" placeholder="Ex: Allergies, sensory issues, etc">
            </div>
            <div>
                <button class="w3-button w3-black w3-right w3-section" type="submit">
                    <i class="far fa-calendar-alt"></i> SCHEDULE EVENT
                </button>
            </div>
        </form>
    </div>
</div>
</div>

