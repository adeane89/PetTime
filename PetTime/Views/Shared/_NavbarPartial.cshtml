@using Microsoft.AspNetCore.Identity
@using PetTime.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="nav navbar-wrapper">
    <nav class="navbar">
        <a asp-controller="Home" asp-action="Index">PAWS</a>
        <a asp-controller="Home" asp-action="Index">Home<span class="sr-only">(current)</span></a>
        <a asp-controller="Home" asp-action="About">About</a>
        <a asp-controller="Pet" asp-action="Index">Services</a>
        <a asp-controller="Events" asp-action="Index">Events</a>
        <a asp-controller="Cart" asp-action="Index"><i class="fas fa-shopping-cart"></i></a>

        @if (SignInManager.IsSignedIn(User))
        {
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">

                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </form>
        }
        else
        {
            <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
            <a asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
        }
    </nav>
</div>
