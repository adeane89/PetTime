@{
    ViewData["Title"] = "Home Page";
}

<div class="smallSet">
    <div><h2></h2></div>
    <div class="w3-center" style="background-color: #efa35c; border-radius: 20px">
        <p class="w3-center">Puppy Cuddles?</p>
        <p></p>
        <a asp-controller="Pet" asp-action="Index"><p style="font-size: 2em">Yes, please!</p></a>
        <p>
        </p>
        <p style="font-size: 1em;">Are you in need of some puppy play time? Drop in anytime to relax for awhile or schedule a visit with a specific puppy!</p>
    </div>
</div>
    <div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="carousel-item slides active">
                <div class="slide-1 d-block">
                    <div class="overlay"></div>
                </div>
                <div class="hero carousel-caption">
                    <hgroup>
                        <h1>Did somebody say puppies?</h1>
                    </hgroup>
                    <a asp-controller="Pet" asp-action="Index" class="btn btn-hero btn-lg" role="button">Schedule a visit!</a>
                </div>
            </div>
            <div class="carousel-item slides">
                <div class="slide-2 d-block">
                    <div class="overlay"></div>
                </div>
                <div class="hero carousel-caption">
                    <hgroup>
                        <h1>Host an Event!</h1>
                    </hgroup>
                    <a asp-controller="Pet" asp-action="Corporate" class="btn btn-hero btn-lg" role="button">Click Here!</a>
                </div>
            </div>
            <div class="carousel-item slides">
                <div class="slide-3 d-block">
                    <div class="overlay"></div>
                </div>
                <div class="hero carousel-caption">
                    <hgroup>
                        <h1>Therapy dogs?</h1>
                        <h1> You bet!</h1>
                    </hgroup>
                    <a asp-controller="Pet" asp-action="Therapy" class="btn btn-hero btn-lg" role="button">Schedule a visit!</a>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#bs-carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#bs-carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
    </div>
