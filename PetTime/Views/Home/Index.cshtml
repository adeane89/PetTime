@{
    ViewData["Title"] = "Home Page";
}

<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
    <!-- Overlay -->
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#bs-carousel" data-slide-to="1"></li>
        <li data-target="#bs-carousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="carousel-item slides active">
            <div class="slide-1 d-block">
                <div class="overlay"></div>
            </div>
            <div class="hero carousel-caption">
                <hgroup>
                    <h1>Did somebody say puppies?</h1>
                </hgroup>
                <a asp-controller="Pet" asp-action="Index" class="btn btn-hero btn-lg" role="button">Schedule a visit!</a>
            </div>
        </div>
        <div class="carousel-item slides">
            <div class="slide-2 d-block">
                <div class="overlay"></div>
            </div>
            <div class="hero carousel-caption">
                <hgroup>
                    <h1>Host an Event!</h1>
                </hgroup>
                <a asp-controller="Pet" asp-action="Corporate" class="btn btn-hero btn-lg" role="button">Click Here!</a>
            </div>
        </div>
        <div class="carousel-item slides">
            <div class="slide-3 d-block">
                <div class="overlay"></div>
            </div>
            <div class="hero carousel-caption">
                <hgroup>
                    <h1>Therapy dogs? You bet!</h1>
                </hgroup>
                <a asp-controller="Pet" asp-action="Therapy" class="btn btn-hero btn-lg" role="button">Schedule a visit!</a>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#bs-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#bs-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
</div>


